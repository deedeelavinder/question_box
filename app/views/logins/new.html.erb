<h1> Log In or </h1><h1><%= link_to "Register", new_user_path %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @login, url: login_path do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Log In", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
